<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffffff">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
android:background="@drawable/ic_profile_red"
        android:id="@+id/circularimageviewid"/>

    <TextView
        android:maxLines="1"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:text="Ram lal AhujaRam lal Ahuja Ram lal Ahuja Ram lal Ahuja Ram lal Ahuja Ram lal Ahuja Ram lal Ahuja Ram lal Ahuja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/circularimageviewid"
        android:layout_toRightOf="@+id/circularimageviewid"
        android:layout_toEndOf="@+id/circularimageviewid"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:id="@+id/textView4" />

    <TextView
        android:maxLines="1"
        android:layout_marginTop="0.5dp"
        android:text="blood Group:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4" />

    <View

        android:layout_marginRight="32dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="105dp"
        android:layout_width="230dp"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/view" />

    <TextView
        android:id="@+id/bloodgroupId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="group"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:maxLength="12"
        android:id="@+id/cityid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:text="City" />

    <TextView
        android:id="@+id/phoneid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123456781290"
        android:layout_alignBottom="@+id/view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="11dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view"
        android:layout_alignStart="@+id/view"
        android:layout_alignTop="@+id/view"
        android:text="" />


</RelativeLayout>